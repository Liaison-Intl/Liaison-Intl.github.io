{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "/schemata/custom_field_answer",

  "title": "Custom Field Answer",
  "description": "A **custom field answer** stores arbitrary data about an applicant, answering the question posed by a **custom field**.",

  "links": [
    {
      "description": "Store a **custom field** value.  If a value has not previously been stored, this *creates* an answer.  Otherwise, this *updates* an existing answer.",
      "href": "/api/v1/user_identities/:user_identity_id/programs/:program_id/applicants/:cas_id/custom_field_answers/:custom_field_id",
      "method": "PUT",
      "rel": "update",
      "title": "Store",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" },
      "schema": {
        "type": "object",
        "properties": {
          "custom_field_answer": {
            "type": "object",
            "required": ["field_type", "value"],
            "properties": {
              "field_type": {
                "type": "string",
                "enum": ["boolean"]
              },
              "value": {
                "type": ["boolean", "null"]
              }
            }
          }
        }
      }
    },
    {
      "description": "Display an existing custom field answer.",
      "href": "/api/v1/user_identities/:user_identity_id/programs/:program_id/applicants/:cas_id/custom_field_answers/:custom_field_id",
      "method": "GET",
      "rel": "self",
      "title": "Show",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" }
    }
  ],

  "type": "object",
  "properties": {
    "custom_field_answer": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "href": { "type": "string" },
            "custom_field_id": { "type": "number" },
            "label": { "type": "string" },
            "field_type": {
              "type": "string",
              "enum": ["boolean"]
            },
            "value": {
              "type": ["boolean", "null"]
            }
          }
        },
        {
          "properties": {
            "href": { "type": "string" },
            "custom_field_id": { "type": "number" },
            "label": { "type": "string" },
            "field_type": {
              "type": "string",
              "enum": ["date"]
            },
            "value": {
              "type": ["string", "null"],
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            }
          }
        },
        {
          "properties": {
            "href": { "type": "string" },
            "custom_field_id": { "type": "number" },
            "label": { "type": "string" },
            "field_type": {
              "type": "string",
              "enum": ["string", "select"]
            },
            "value": {
              "type": ["string", "null"]
            }
          }
        },
        {
          "properties": {
            "href": { "type": "string" },
            "custom_field_id": { "type": "number" },
            "label": { "type": "string" },
            "field_type": {
              "type": "string",
              "enum": ["number"]
            },
            "value": {
              "type": ["number", "null"]
            }
          }
        }
      ]
    }
  }
}
