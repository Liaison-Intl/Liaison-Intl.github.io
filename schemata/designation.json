{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "/schemata/designation",

  "title": "Designation",
  "description": "An applicant applies to one or more **programs** through **designations**.  **Programs** render a **decision** for the **designation**.",

  "links": [
    {
      "description": "Display the designation for the applicant with the given CAS ID and program ID.",
      "href": "/api/v1/user_identities/:user_identity_id/programs/:program_id/applicants_by_cas_id/:cas_id/designation",
      "method": "GET",
      "rel": "self",
      "title": "Show",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" }
    },
    {
      "description": "Update the designation with the given CAS ID and program ID.  **NOTE:** Currently, we only allow decisions to be updated when the `local_status` is `null`.",
      "href": "/api/v1/user_identities/:user_identity_id/programs/:program_id/applicants_by_cas_id/:cas_id/designation",
      "method": "PATCH",
      "rel": "update",
      "title": "Update",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" },
      "schema": {
        "type": "object",
        "properties": {
          "designation": {
            "type": "object",
            "properties": {
              "decision_id": {
                "type": "integer",
                "description": "The unique identifier for the decision to set.",
                "example": 42
              }
            }
          }
        }
      }
    }
  ],

  "type": "object",
  "properties": {
    "designation": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "description": "Hypertext reference to this resource.",
          "pattern": "/api/v1/user_identities/\\d+/programs/\\d+/applicants_by_cas_id/\\d+/designation",
          "example": "/api/v1/user_identities/1/programs/2/applicants_by_cas_id/3/designation"
        },
        "applicant": {
          "type": "object",
          "properties": {
            "cas_id": {
              "type": "string",
              "description": "The CAS ID for the applicant.  This identifier is used across Liaison systems to uniquely identify an applicant.  Think of it as having similar properties to a social security number (SSN), except that it's randomly assigned.",
              "example": "3"
            }
          }
        },
        "decision": {
          "type": ["object", "null"],
          "properties": {
            "id": {
              "type": "integer",
              "description": "Unique identifier of this decision."
            },
            "name": {
              "type": "string",
              "description": "Human-readable name for this decision.",
              "example": "Offer Accepted"
            }
          }
        },
        "local_status": {
          "type": ["object", "null"],
          "properties": {
            "id": {
              "type": "integer",
              "description": "Unique identifier of this local status.",
              "example": 123456
            },
            "title": {
              "type": "string",
              "description": "Human-readable title for this local status.",
              "example": "Accepted Offer"
            }
          }
        }
      }
    }
  }
}
