{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "/schemata/pdf_manager_zip_file",

  "title": "PDF Manager Zip File",
  "description": "A **PDF Manager zip file** represents the asynchronous execution and eventual population of a **PDF Manager template**.",

  "definitions": {
    "id": {
      "type": "integer",
      "description": "Unique identifier of this PDF Manager zip file."
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of this PDF Manager zip file.",
      "example": "Accepted Offers for Review"
    },
    "status": {
      "type": "string",
      "description": "Current state of this zip file.  When `\"Available\"`, the file is ready for download.",
      "enum": ["Initializing", "Queued", "In Progress", "Available", "Success with Errors", "Empty List", "Failed"],
      "example": "Queued"
    },
    "download_url": {
      "type": ["null", "uri"],
      "description": "When status is **not** `\"Available\"`, this is `null`.  When status is `\"Available\"`, this is a *temporary* URI for downloading that expires within 30 seconds.  The download URL can always be re-generated if it expires by re-calling this method -- a new URL will be issued.",
      "pattern": "^https://",
      "example": null
    },
    "pdf_manager_template": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier of the PDF Manager template.",
          "example": 2
        },
        "href": {
          "type": "string",
          "description": "Hypertext reference to the PDF Manager template.",
          "pattern": "/api/v1/user_identities/\\d+/pdf_manager_template/\\d+",
          "example": "/api/v1/user_identities/1/pdf_manager_template/2"
        }
      }
    }
  },

  "links": [
    {
      "description": "Display existing PDF Manager zip file with download URL.",
      "href": "/api/v1/user_identities/:user_identity_id/pdf_manager_zip_files/:pdf_manager_zip_file_id",
      "method": "GET",
      "rel": "self",
      "title": "Show",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" }
    },
    {
      "description": "List existing PDF Manager zip files.  Importantly, the download URL is not displayed in this response as these individual expiring URLs can only be generated by calling for the status of an individual file directly using the previous call. You can use the results of this call and loop through each one to get a download URL for each export file marked as `\"Available\"`.",
      "href": "/api/v1/user_identities/:user_identity_id/pdf_manager_zip_files",
      "method": "GET",
      "rel": "instances",
      "title": "List",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" },
      "targetSchema": {
        "properties": {
          "href": {
            "type": "string",
            "description": "Hypertext reference to this resource.",
            "pattern": "/api/v1/user_identities/\\d+/pdf_manager_zip_files",
            "example": "/api/v1/user_identities/1/pdf_manager_zip_files"
          },
          "pdf_manager_zip_files": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name"],
              "properties": {
                "id": {
                  "$ref": "#/schemata/pdf_manager_zip_file/definitions/id"
                },
                "name": {
                  "$ref": "#/schemata/pdf_manager_zip_file/definitions/name"
                },
                "status": {
                  "$ref": "#/schemata/pdf_manager_zip_file/definitions/status"
                },
                "pdf_manager_template": {
                  "$ref": "#/schemata/pdf_manager_zip_file/definitions/pdf_manager_template"
                }
              }
            }
          }
        }
      }
    },
    {
      "description": "Initiate the creation of a PDF Manager zip file from a template.",
      "href": "/api/v1/user_identities/:user_identity_id/pdf_manager_zip_files",
      "method": "POST",
      "rel": "create",
      "title": "Initiate Run",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" },
      "schema": {
        "required": ["pdf_manager_template_id"],
        "properties": {
          "pdf_manager_template_id": {
            "type": "integer",
            "description": "Unique identifier of the PDF Manager template.",
            "example": 2
          },
          "callback": {
            "type": "uri",
            "description": "When the zip file is ready, WebAdMIT will `POST` to this callback URL.  The data uses the same schema as the GET request.",
            "pattern": "^https://",
            "example": "https://example.com/my_callback"
          }
        }
      }
    }
  ],

  "type": "object",
  "strictProperties": true,

  "properties": {
    "href": {
      "type": "string",
      "description": "Hypertext reference to this resource.",
      "pattern": "/api/v1/user_identities/\\d+/pdf_manager_zip_files",
      "example": "/api/v1/user_identities/1/pdf_manager_zip_files"
    },
    "pdf_manager_zip_file": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "$ref": "#/schemata/pdf_manager_zip_file/definitions/id"
        },
        "name": {
          "$ref": "#/schemata/pdf_manager_zip_file/definitions/name"
        },
        "status": {
          "$ref": "#/schemata/pdf_manager_zip_file/definitions/status"
        },
        "download_url": {
          "$ref": "#/schemata/pdf_manager_zip_file/definitions/download_url"
        },
        "pdf_manager_template": {
          "$ref": "#/schemata/pdf_manager_zip_file/definitions/pdf_manager_template"
        }
      }
    }
  }
}
