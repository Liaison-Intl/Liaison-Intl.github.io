{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "id": "/schemata/social_security_numbers",

  "title": "Social Security Numbers",
  "stability": "prototype",
  "description": "A **user identity** may have one **organization**. An **organization** may have none or one **Social Security Numbers document**.",

  "links": [
    {
      "description": "Display existing SSNs.",
      "href": "/api/v1/user_identities/:user_identity_id/social_security_numbers",
      "method": "GET",
      "rel": "self",
      "title": "Show",
      "http_header": { "x-api-key": "0123456789abcdef0123456789abcdef" }
    }
  ],

  "type": "object",
  "strictProperties": true,

  "properties": {
    "social_security_numbers": {
      "type": "object",
      "required": ["href", "url", "organization"],
      "properties": {
        "href": {
          "type": "string",
          "description": "Hypertext reference to this resource.",
          "pattern": "/api/v1/user_identities/\\d+/social_security_numbers",
          "example": "/api/v1/user_identities/1/social_security_numbers"
        },
        "url": {
          "type": "string",
          "description": "Hypertext reference to download the document.",
          "example": "http://private.webadmit-file-repository.com/document/12345"
        },
        "organization": {
          "type": "object",
          "required": ["id", "name"],
          "properties": {
            "id": {
              "type": "integer",
              "description": "Unique identifier of the organization.",
              "example": 3
            },
            "name": {
              "type": "string",
              "description": "Name of the organization.",
              "example": "Harvard T.H. Chan School of Public Health"
            }
          }
        }
      }
    }
  }
}
